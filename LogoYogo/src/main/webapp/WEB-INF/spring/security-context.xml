<beans:beans xmlns="http://www.springframework.org/schema/security"
    xmlns:beans="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://www.springframework.org/schema/security
        http://www.springframework.org/schema/security/spring-security.xsd
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 접근 권한 -->
    <http auto-config="true" use-expressions="true">
    	<!-- isAuthenticated : 로그인 한 유저만 접근 가능 / permitAll : 전부 접근 가능 / 순서가 바뀌면 전부 접근 불가능도 가능-->
    	<intercept-url pattern="/login" access="permitAll" />
        <intercept-url pattern="/select**" access="permitAll" />
        <!-- 
        <intercept-url pattern="/editor.do" access="isAuthenticated()" />
         -->
        <form-login
            login-page="/login"
            login-processing-url="/login"
            authentication-success-handler-ref="successHandler"
    		authentication-failure-handler-ref="failureHandler"
        />
        <logout logout-url="/logout" logout-success-url="/" />
    </http>
    
    <beans:bean id="successHandler"	class="com.Eclipse.LogoYogo.service.SuccessHandler"/>
	<beans:bean id="failureHandler"	class="com.Eclipse.LogoYogo.service.FailureHandler"/>

    <authentication-manager>
    <!-- 
        <authentication-provider>
        	<password-encoder ref="passwordEncoder"/>
            <jdbc-user-service data-source-ref="dataSource"
                           users-by-username-query="SELECT username, password, 1 AS enabled FROM logininfo WHERE username=?"
                           authorities-by-username-query="SELECT username, 'ROLE_USER' FROM logininfo WHERE username=?"/>
        </authentication-provider>
     -->
     <!-- 
     	<authentication-provider ref="authProvider"/>        
      -->
    </authentication-manager>
    <beans:bean id="passwordEncoder" class="org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder"/>
</beans:beans>